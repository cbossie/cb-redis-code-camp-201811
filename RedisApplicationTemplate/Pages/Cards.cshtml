@page
@model CardsModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <h2>Deal a hand for a game of cards</h2>


</div>
<div class="row" >
    <form method="post" asp-page-handler="Shuffle">
        <button class="btn btn-primary" type="submit">Re Shuffle Cards</button>
    </form>
</div>

<div class="row">
    <hr/>
</div>

<div class="row">
    <form method="post" asp-page-handler="deal">

        <div class="form-group">
            <label>Cards to Deal</label>
            

            <input name="count" type="number" value="@Model.Count" type="number"/>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Deal Cards!</button>
        </div>
    </form>
</div>






@if (Model.Success.HasValue)
{
    <hr/>
    <div class="row">
        @if (@Model.Success.Value)
        {
            if (Model.Cards.Any())
            {
                foreach (var item in Model.Cards)
                {
                    <div class="col-md-2">
                        <img style="width: 100px;" src="@($"images/cards/{item}.png")"/>
                    </div>
                }

            }


        }
        else
        {
            <div class="alert-warning">@Model.Message</div>
        }
    </div>

    <div class="row">
        Elapsed Time (ms) = @Model.MillisecondDuration
    </div>

}
else
{
    <div class="alert-info">@Model.Message</div>
}