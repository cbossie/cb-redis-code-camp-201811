@page
@model WeatherModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
<h2>Please Enter the ZIP you want to get weather info for</h2>


</div>
<div class="row">
    <form method="post">

        <div class="form-group">
            <label asp-for="ZipCode">Postal Code</label>

            <input asp-for="ZipCode" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@if (Model.Success.HasValue)
{
    <hr/>
    <div class="row">
        @if (@Model.Success.Value)
        {
            <span class="h3">Results</span>
            <dl>
                <dt>City</dt>
                <dd>@Model.TownName</dd>
            </dl>
            <dl>
                <dt>Temperature</dt>
                <dd>@Model.Temperature</dd>    
            </dl>
            <dl>
                <dt>Wind Speed</dt>
                <dd>@Model.WindSpeed</dd>
            </dl>
        }
        else
        {
            <div class="alert-warning">@Model.Message</div>
        }
    </div>

    <div class="row">
        Elapsed Time (ms) = @Model.MillisecondDuration
    </div>

}